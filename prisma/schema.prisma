generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int @id @default(autoincrement())
  pseudo    String? @unique
  avatarUrl String?
  email     String?  @unique
  password  String?
  invitationsFrom Invitation[] @relation("invitationsFrom")
  invitationsTo Invitation[] @relation("invitationsTo")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Invitation {
  id Int @id @default(autoincrement())
  fromUser User @relation("invitationsFrom", fields: [fromId], references: [id], onDelete: Cascade)
  fromId Int
  toUser User @relation("invitationsTo", fields: [toId], references: [id], onDelete: Cascade)
  toId Int
  game String
}